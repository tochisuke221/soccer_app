
<div class="comment_box">
  <div class="comment_box__user">
    <div class="comment_user_info">
      <div class="comment_box__img">
        <%if pcomment.user.myphoto.attached?%>
            <%=link_to (image_tag pcomment.user.myphoto, class: "smround-img"),user_path(pcomment.user)%>
        <%else%>
           <%=link_to (image_tag '/default_myphoto.png' , class: "smround-img"),user_path(pcomment.user)%>
        <%end%>
      </div>
      <div class="comment_box__name">
        
        <%=link_to pcomment.user.name,user_path(pcomment.user),class: "link_decoration"%>
      </div>  
    </div>
    <%if current_user==pcomment.user%>
      <div class="comment_trash">
        <%= link_to(content_tag(:i, '', class: 'fas fa-trash'),practice_pcomment_path(practice,pcomment),method: :delete,remote:true,style:"color:#a9a9a9")%> 
      </div>
    <%end%>
  </div>
  <div class="comment_box__comment">
    <%=pcomment.comment%>
  </div>
  <div class="comment_box__time">
    <%=l pcomment.created_at, format: :short%>
  </div>
</div>


         